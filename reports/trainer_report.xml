<odoo>
    <!-- Report Action -->
      <record id="action_report_ksc_lab_test" model="ir.actions.report">
        <field name="name">Lab Report</field>
        <field name="model">patient.laboratory.test</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ksc_laboratory.report_ksc_lab_test</field>
        <field name="report_file">ksc_laboratory.report_ksc_lab_test</field>
        <field name="print_report_name">(object.name or 'LabReport').replace('/','_') + '_LabReport'</field>
        <field name="binding_model_id" ref="model_patient_laboratory_test"/>
        <field name="binding_type">report</field>
    </record>

    <!-- QWeb Template -->
    <template id="trainer_appointments_count_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="wizard">
                <div class="page">
                    <h2>Trainer Appointments Report</h2>
                    <p><strong>Trainer:</strong> <t t-esc="wizard.trainer_id.name"/></p>
                    <p><strong>From:</strong> <t t-esc="wizard.from_date"/></p>
                    <p><strong>To:</strong> <t t-esc="wizard.to_date"/></p>
                    <hr/>
                    <t t-set="appointments"
                       t-value="env['gym.appointment'].search([
                           ('trainer_id', '=', wizard.trainer_id.id),
                           ('start_time', '&gt;=', wizard.from_date),
                           ('end_time', '&lt;=', wizard.to_date)
                       ])"/>
                    <p><strong>Total Appointments:</strong> <t t-esc="len(appointments)"/></p>
                </div>
            </t>
        </t>
    </template>
</odoo>
