<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_gym_appointment_tree" model="ir.ui.view">
        <field name="name">gym.appointment.tree</field>
        <field name="model">gym.appointment</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" delete="false">
                <field name="weekday" readonly="1"/>
                <field name="start_time" readonly="1"/>
                <field name="end_time" readonly="1"/>
                <!-- <field name="subscription_id" readonly="1"/> -->
            </tree>
        </field>
    </record>

    <!-- calendar View -->
<record id="view_gym_appointment_calendar" model="ir.ui.view">
    <field name="name">gym.appointment.calendar</field>
    <field name="model">gym.appointment</field>
    <field name="arch" type="xml">
        <calendar string="Class Scheduled"
                  date_start="start_time"
                  date_stop="end_time"
                  color="trainer_id"
                  mode="month"
                  quick_create="false"
                  event_open_popup="true">
            <field name="weekday"/>
            <field name="trainer_id"/>
        </calendar>
    </field>
</record>




    <!-- Form View -->
    <record id="view_gym_appointment_form" model="ir.ui.view">
        <field name="name">gym.appointment.form</field>
        <field name="model">gym.appointment</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <sheet>
                    <group>
                        <field name="weekday" readonly="1"/>
                        <field name="start_time" readonly="1"/>
                        <field name="end_time" readonly="1"/>
                      
                        <!-- <field name="subscription_id" readonly="1"/> -->
                    </group>
                    <group>
                        <field name="session_cost" readonly="1"/>
                        <field name="trainer_cost_inside" readonly="1"/>
                        <field name="trainer_cost_outside" readonly="1"/>
                        <field name="is_in_working_hours" readonly="1"/>
                        <field name="is_out_working_hours" readonly="1"/>
                        <!-- <field name="subscription_id" readonly="1"/> -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_gym_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">gym.appointment</field>
        <field name="view_mode">tree,calendar,form</field>
    </record>
</odoo>
