<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_gym_trainer_tree" model="ir.ui.view">
        <field name="name">gym.trainer.tree</field>
        <field name="model">gym.trainer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="national_id"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_gym_trainer_form" model="ir.ui.view">
        <field name="name">gym.trainer.form</field>
        <field name="model">gym.trainer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                     <header>
                    <button name="action_open_wizard"
                            string="Open Report Wizard"
                            type="object"
                            class="btn-primary"/>
                </header>
                   <div name="button_box" position="inside">
                        <button class="oe_stat_button" type="object"
                                name="action_appointment_numbers" icon="fa-star">
                            <field string="Appointments" name="number_of_appointments"
                                   widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="national_id"/>
                            <field name="is_active"/>
                            <field name="number_of_appointments"/>
                            <field name="trainer_cost_inside"/>
                            <field name="trainer_cost_outside"/>
                            <field name="session_cost"/>
                        </group>
                        <group>
                            <field name="image_500" widget="image" class="oe_avatar"/>
                        </group>
                    </group>

                    <!-- <notebook>
                        <page string="Appointments">
                            <field name="appointment_ids">
                                <tree editable="bottom">
                                    <field name="weekday"/>
                                    <field name="start_time"/>
                                    <field name="end_time"/>
                                </tree>
                                <form>
                                    <group string="Appointment Info">
                                        <field name="weekday"/>
                                        <field name="start_time"/>
                                        <field name="end_time"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook> -->
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_gym_trainer" model="ir.actions.act_window">
        <field name="name">Trainers</field>
        <field name="res_model">gym.trainer</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
