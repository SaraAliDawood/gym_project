<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_gym_trainee_tree" model="ir.ui.view">
        <field name="name">gym.trainee.tree</field>
        <field name="model">gym.trainee</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="national_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_gym_trainee_form" model="ir.ui.view">
        <field name="name">gym.trainee.form</field>
        <field name="model">gym.trainee</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="national_id"/>
                        </group>
                        <group>
                            <field name="image_500" widget="image" class="oe_avatar"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_gym_trainee" model="ir.actions.act_window">
        <field name="name">Trainees</field>
        <field name="res_model">gym.trainee</field>
        <field name="view_mode">tree,form</field>
    </record>

    
</odoo>
