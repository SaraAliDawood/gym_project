<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_gym_subscription_tree" model="ir.ui.view">
        <field name="name">gym.subscription.tree</field>
        <field name="model">gym.subscription</field>
        <field name="arch" type="xml">
            <tree>
                <field name="service_id"/>
                <field name="price"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_gym_subscription_form" model="ir.ui.view">
        <field name="name">gym.subscription.form</field>
        <field name="model">gym.subscription</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,running,pause,cancel,done"/>
                    </header>

                    <group>
                        <group string="Trainer Info" colspan="2">
                            <field name="trainer_id"/>
                            <field name="trainer_national_id" readonly="1"/>
                            <field name="trainer_phone" readonly="1"/>
                        </group>

                        <group string="Trainee Info" colspan="2">
                            <field name="trainee_id"/>
                            <field name="trainee_national_id" readonly="1"/>
                            <field name="trainee_phone" readonly="1"/>
                            <field name="service_id"/>
                            <field name="price" readonly="1"/>
                            <field name="appointment_ids" domain="[('trainer_id', '=', trainer_id)]">
                                <tree editable="bottom">
                                    <field name="weekday"/>
                                    <field name="start_time"/>
                                    <field name="end_time"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_gym_subscription" model="ir.actions.act_window">
        <field name="name">Subscriptions</field>
        <field name="res_model">gym.subscription</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
